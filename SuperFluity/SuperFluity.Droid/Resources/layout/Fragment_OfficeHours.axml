                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSaturday" />
            <CheckBox
                android:text="Open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Saturday"
                android:id="@+id/chkSaturday" />
            <Button
                android:text="Opening Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaturdayOpen"
                android:background="@drawable/red_button"
                android:tag="SaturdayOpen"
                android:layout_margin="4dp"
                android:enabled="false" />
            <Button
                android:text="Closing Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaturdayClose"
                android:background="@drawable/red_button"
                android:tag="SaturdayClose"
                android:layout_margin="4dp"
                android:enabled="false" />
            <TextView
                android:text="Sunday"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSunday" />
            <CheckBox
                android:text="Open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Sunday"
                android:id="@+id/chkSunday" />
            <Button
                android:text="Opening Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSundayOpen"
