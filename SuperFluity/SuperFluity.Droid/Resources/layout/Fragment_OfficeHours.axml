          <Button
    android:text="Save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnSaveOfficeHours"
    android:background="@drawable/red_button"
    android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>